{
  "name": "Tab Sweep",
  "version": "0.1.0",
  "description": "Tab Sweep is a really easy way to manage overflowing tabs.",
  "homepage_url": "https://github.com/sporkmonger/tabsweep",
  "icons": {
    "16": "16.png",
    "19": "19.png",
    "48": "48.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": "19.png",
    "default_title": "Tab Sweep",
    "default_popup": "popup.html"
  },
  "background_page": "background.html",
  "options_page": "options.html",
  "omnibox": { "keyword" : "tabs" },
  "offline_enabled": true,
  "permissions": [
    "history",
    "bookmarks",
    "tabs"
  ],
  "content_security_policy": "default-src 'self'"
}
